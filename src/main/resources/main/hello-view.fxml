<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="415.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="CENTER" prefHeight="18.0" prefWidth="105.0" text="QUIZ">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
   <TextField fx:id="usernameField" promptText="Username" />
   <PasswordField fx:id="passwordField" promptText="Password" />
   <Button fx:id="loginButton" mnemonicParsing="false" onMousePressed="#setLoginButton" prefHeight="26.0" prefWidth="237.0" text="Log in" />
   <VBox prefHeight="142.0" prefWidth="230.0">
      <children>
         <Label alignment="CENTER" prefHeight="18.0" prefWidth="234.0" text="Unesi podatke za novog korisnika">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <TextField fx:id="newUsername" promptText="New username" />
         <PasswordField fx:id="newPassword" promptText="New password" />
         <Button fx:id="addNewUser" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMousePressed="#setAddNewUser" prefHeight="26.0" prefWidth="268.0" text="Add new user" />
      </children>
   </VBox>

    <Label fx:id="welcomeText" />
</VBox>
